<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_primary"
    android:backgroundTint="?colorOnPrimary"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="250dp"
        android:layout_height="248dp"
        android:contentDescription="@string/bora_rachar_icone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="161dp"
        android:layout_height="161dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="60dp"
        android:background="?colorContainer"
        android:contentDescription="@string/cone_de_pessoas"
        app:layout_constraintEnd_toStartOf="@+id/pessoas"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        app:srcCompat="@drawable/pessoas" />

    <EditText
        android:id="@+id/pessoas3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTintMode="screen"
        android:ems="10"
        android:hint="@string/_0"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="?colorOnSecondary"
        android:textColorHint="?colorOnSecondary"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.336"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="@+id/imageView12"
        app:layout_constraintVertical_bias="0.494" />

    <EditText
        android:id="@+id/valorTotal4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:backgroundTintMode="screen"
        android:ems="10"
        android:hint="@string/_0_00"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="?colorOnSecondary"
        android:textColorHint="?colorOnSecondary"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.515" />

    <ImageView
        android:id="@+id/compartilhar4"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="76dp"
        android:background="?colorOnSecondary"
        android:clickable="true"
        android:contentDescription="@string/compartilhar"
        app:backgroundTint="?colorOnSecondary"
        app:ensureMinTouchTargetSize="true"
        app:layout_constraintEnd_toStartOf="@+id/falar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12"
        app:maxImageSize="120dp"
        app:srcCompat="@drawable/compartilhar" />

    <ImageView
        android:id="@+id/falar4"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:background="?colorOnSecondary"
        android:clickable="true"
        android:contentDescription="@string/falar_valor"
        app:backgroundTint="?colorOnSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/compartilhar4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toEndOf="@+id/compartilhar4"
        app:layout_constraintTop_toTopOf="@+id/compartilhar4"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="#FFFFFF"
        app:srcCompat="@drawable/falando" />

    <TextView
        android:id="@+id/valorResultado4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="216dp"
        android:inputType="numberDecimal"
        android:text="@string/zero"
        android:textColor="?colorOnSecondary"
        android:textSize="96sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="272dp"
        android:layout_marginTop="88dp"
        android:text="@string/r"
        android:textColor="?colorOnSecondary"
        android:textSize="96sp"
        app:layout_constraintEnd_toStartOf="@+id/valorResultado"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compartilhar4" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="161dp"
        android:layout_height="161dp"
        android:layout_marginStart="132dp"
        android:background="?colorContainer"
        android:contentDescription="@string/dinheiro_icone"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/money"
        tools:layout_editor_absoluteY="560dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="@string/hint"
        android:textAlignment="center"
        android:textColor="?colorOnSecondary"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>